{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "API_TITLE": "NASA Weather Prediction API",
    "API_VERSION": "1.0.0",
    "DEBUG": "false"
  }
}